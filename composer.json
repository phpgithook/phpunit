    ],
    "autoload": {
        "psr-4": {
            "PHPGithook\\PHPUnit\\": "src"
        }
    },
    "require": {
        "phpgithook/interface": "dev-master",
        "phpunit/phpunit": "^6.5"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.1",
        "friendsofphp/php-cs-fixer": "^2.10"
    },
    "scripts": {
        "fix": [
            "./vendor/bin/php-cs-fixer fix -v"
        ],
        "test": [
            "./vendor/bin/php-cs-fixer fix --diff --dry-run -v"
        ]
    }
}
